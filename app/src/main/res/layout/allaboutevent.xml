<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/aboutevent_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/aboutevent_eventdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/aboutevent_description"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/aboutevent_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutevent_eventdesc"
        android:layout_marginTop="10dp"
        android:text="Venue :"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/aboutevent_eventvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutevent_eventdesc"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/aboutevent_venue"/>
    <TextView
        android:id="@+id/aboutevent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutevent_venue"
        android:layout_marginTop="10dp"
        android:text="Date :"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/aboutevent_eventdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutevent_venue"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/aboutevent_date"/>
    <TextView
        android:id="@+id/aboutevent_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutevent_date"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:text="Registration List"/>

    <ScrollView
        android:id="@+id/aboutevent_userslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/aboutevent_users">

        <ListView
            android:id="@+id/aboutevent_usersdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>


</RelativeLayout>