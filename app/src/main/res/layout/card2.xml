<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardUseCompatPadding="true"
        android:elevation="6dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="#E6E6E6">

            <TextView
                android:id="@+id/card_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/action_settings"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/card_subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_title1"
                android:text="@string/action_settings"
                android:textSize="14sp"
                />
            <View
                android:id="@+id/horizontalline1"
                android:layout_width="200dp"
                android:layout_height="0.5dp"
                android:background="@color/cardview_dark_background"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/card_subtitle1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalline1"
                android:text="@string/card_detail"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:background="@drawable/vigyaan"
                android:scaleType="centerCrop"
                android:layout_alignRight="@+id/card_title1"
                android:layout_alignParentEnd="true"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>